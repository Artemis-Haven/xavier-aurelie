{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="https://fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet"> 
{% endblock %}

{% block containerClass %}col-md-12{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

		    <h1>Albums photos</h1>

    		{% if legend|trim is not empty %}
				<h4>{{ legend|nl2br }}</h4>
		    {% endif %}

			<a href="{{ path('gallery_new') }}" class="btn btn-default">Ajoutez vos photos</a>

    		<hr>
    		Cliquez sur un album pour afficher toutes ses photos.
		</div>
	</div>

	<div id="photo-stack-container">
	    {% for gallery in galleries if gallery.photos is not empty %}
			<a class="photo-stack" href="{{ path('gallery_show', {'id': gallery.id}) }}">
				<div>
					<img src="{{ vich_uploader_asset(gallery.photos|first, 'imageFile') }}" alt="{{ gallery.title }}, par {{ gallery.author }}" />
					<div class="photo-stack-title" title="{{ gallery.title }}, par {{ gallery.author }}">{{ gallery.title }}</div>
				</div>
			</a>
	    {% endfor %}
	</div>

{% endblock %}