{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}	
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css" integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA==" crossorigin=""/>
	<script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js" integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA==" crossorigin=""></script>
	<link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Kalam" rel="stylesheet"> 
	<style>
		/* entire container, keeps perspective */
		.flip-container {
			perspective: 1000px;
		}

		.flip-container, .front, .back {
			width: 500px;
			height: 330px;
		}

		/* flip speed goes here */
		.flipper {
			transition: 0.6s;
			transform-style: preserve-3d;
			-webkit-transform-style: preserve-3d;
			-ms-transform-style: none;
			height: 100%;
			position: relative;
			box-shadow: 0 3px 14px rgba(0,0,0,0.6);
			cursor: pointer;
		}

		/* hide back of pane during swap */
		.flip-front, .flip-back {
			backface-visibility: hidden;
			-moz-backface-visibility: hidden;
			-webkit-backface-visibility: hidden;
			position: absolute;
			top: 0;
			left: 0;
		}

		/* front pane, placed above back */
		.flip-front {
			z-index: 2;
			/* for firefox 31 */
			transform: rotateY(0deg);
			-webkit-transform: rotateY(0deg);
		}

		/* back, initially hidden pane */
		.flip-back {
			transform: rotateY(180deg);
			-webkit-transform: rotateY(180deg);
		}

		.flip-container.flipped .flipper, .flip-container.flip .flipper {
			transform: rotateY(180deg);
			-webkit-transform: rotateY(180deg);
			-ms-transform: none;
		}

		.flip-container.flipped .flipper .flip-front, 
		.flip-container.flip .flipper .flip-front {
			-ms-transform: rotateY(180deg);
		}

		.flip-container.flipped .flipper .flip-back, 
		.flip-container.flip .flipper .flip-back {
			-ms-transform: rotateY(0deg);
		}



		#mapid { 
			height: 800px;
			width: 100%; 
		}
		.leaflet-popup-content-wrapper {
			border-radius: 1px;
			background-color: transparent;
			box-shadow: none;
		}
		.leaflet-popup-content {
			margin: 0;
		}
		.leaflet-popup-tip-container {
			opacity: 0;
		}
		.postcard {
			background-image: url('/images/map/postcard-bg.png');
			background-size: 100px;
			font-family: 'Kalam', cursive;
			vertical-align: top;
			width: 100%;
			height: 100%;
		}
		.postcard-content {
			background-color: #edeae3;
			margin: 8px 10px;
			padding: 8px;
			height: 310px;
		}
		.postcard-left-side, .postcard-right-side {
			display: inline-block;
			height: 100%;
			vertical-align: top;
		}
		.postcard-left-side {
			width: 60%;
			font-size: 15px;
			overflow-y: auto;
			padding-right: 5px;
		}
		.postcard-left-side.sm {
			font-size: 14px;
		}
		.postcard-left-side.lg {
			font-size: 17px;
		}
		.postcard-right-side {
			width: 39%;
			border-left: 1px solid #aaa;
		}
		.postcard-stamp {
			text-align: right;
		}
		.postcard-stamp img {
			height: 70px;
		}
		.postcard-address {
			padding: 10px 0 0 15px;
			color: #666;
			text-align: center;
			font-size: 15px;
			font-weight: bold;
		}
		.postcard-address hr {
			margin: 5px 0 10px 0;
			border-color: #aaa;
		}
		.postcard-address a.btn {
			color: #568c23;
			border: 3px solid #7fc040;
			font-size: 16px;
			background-color: #eaeaea;
			margin-top: 10px;
		}
		.postcard-address a.btn:hover {
			background-color: #fafafa;
		}

		.postcard.flip-front  {
			background-color: #ddd;
			background-size: cover;
			text-transform: uppercase;
			font-family: 'Arial', sans-serif;
			-webkit-filter: contrast(80%) sepia(50%) grayscale(50%);
			filter: contrast(80%) sepia(50%) grayscale(50%);
			box-sizing: border-box;
			border: 10px solid #fff;
		}
		.postcard.flip-front b {
			display: inline-block;
			padding: 10px 20px;
			width: 100%;
			font-size: 18px;
			background-color: rgba(255, 255, 255, 0.6);
			box-sizing: border-box;
			position: absolute;
			bottom: 0px;
		}
	</style>
{% endblock %}

