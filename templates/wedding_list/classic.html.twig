{% extends 'base.html.twig' %}

{% block body %}
    
    <h1>Liste de mariage</h1>

    <hr>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Lien</th>
                <th>Financé</th>
            </tr>
        </thead>
        <tbody>
            {% for item in listItems %}
                <tr>
                    <td>{{ item.title }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.price }} €</td>
                    <td><a href="{{ item.link }}">Lien</a></td>
                    <td>{{ item.gifted ? 'Oui' : 'Non' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-muted text-center">Aucun élément n'est renseigné pour l'instant.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
