<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Site de mariage de Xavier et Aurélie{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Armata|Tangerine" rel="stylesheet"> 
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
		<header class="container">
			<img src="{{ asset('images/header_background.jpg') }}" alt="Mariage de Xavier et Aurélie">
			<h1>Aurélie & Xavier</h1>
			<h2>30 mai 2019</h2>
			<h3>J-375</h3>
		
			<nav class="navbar">
				<ul class="nav navbar-nav">
					<li><a href="{{ path('homepage') }}">Accueil</a></li>
					<li><a href="{{ path('blog') }}">Blog</a></li>
					<li><a href="#">Albums photos</a></li>
					<li><a href="{{ path('access_map') }}">Plan d'accès</a></li>
					<li><a href="{{ path('carpooling') }}">Co-voiturage</a></li>
					<li><a href="{{ path('accommodations') }}">Hébergements</a></li>
					<li><a href="{{ path('contact') }}">Contact</a></li>
					<li><a href="{{ path('answer') }}">Réponse</a></li>
					<li><a href="{{ path('wedding_list') }}">Liste de mariage</a></li>
				</ul>
			</nav>
		</header>

		<div class="container">
			<section class="row">
				<div class="col-md-8 col-md-offset-2">
	        		{% block body %}{% endblock %}
				</div>
			</section>
		</div>
        
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
